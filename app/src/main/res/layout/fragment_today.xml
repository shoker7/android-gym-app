<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sam.finalproject.TodayFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today's workout:"
        android:textSize="38sp"
        android:textStyle="bold"
        android:textAlignment="viewStart"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:id="@+id/tvToday"
        />

    <Button
        android:text="Track Now"
        android:textSize="24sp"
        android:background="@color/colorAccent"
        android:textColor="@color/textColorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_below="@+id/tvToday"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:onClick="startWorkoutActivity"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >
            <!--Workout Category-->
            <TextView
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_below="@+id/tvToday"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:text="CHEST"
                android:id="@+id/workout_category"/>
            <!--End Workout Category -->

            <!-- Exercise List -->
            <TextView
                android:text="Medium Barbell Bench Press\n\t(3 sets x 12)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_margin="3dp"
                />
            <TextView
                android:text="Medium Barbell Bench Press\n\t(3 sets x 12)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_margin="3dp"
                />
            <TextView
                android:text="Medium Barbell Bench Press\n\t(3 sets x 12)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_margin="3dp"
                />
            <TextView
                android:text="Medium Barbell Bench Press\n\t(3 sets x 12)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_margin="3dp"
                />
            <TextView
                android:text="Medium Barbell Bench Press\n\t(3 sets x 12)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_margin="3dp"
                />
            <TextView
                android:text="Medium Barbell Bench Press\n\t(3 sets x 12)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_margin="3dp"
                />
            <!-- End Exercise List -->


        </LinearLayout>
    </ScrollView>


</RelativeLayout>